<h1>Product List</h1>
<div class="container mt-5">
     <div class="row  justify-content-between">
          <% products.forEach(function(product){ %>
               <div class="card" style="width: 18rem;">
                    <img src="<%= product.image %>" class="card-img-top" alt="...">
                    <div class="card-body">
                         <h5 class="card-title">
                              <%= product.name %>
                         </h5>
                         <p class="card-text">
                              <%= product.details %>
                         </p>
                         <p class="card-text">
                              <%= product.price %>
                         </p>
                    </div>
               </div>
               <% }); %>
     </div>
</div>